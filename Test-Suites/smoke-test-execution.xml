<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA Smoke Test Suite" verbose="1" preserve-order="true">
	<listeners>
		<listener class-name="com.demoqa.webautomation.utilities.ExtentReportManager" />
	</listeners>
	
	<parameter name="os" value="windows" />
	<parameter name="browser" value="chrome" />
	
	<!-- Smoke Tests - Critical Path Only (18 tests) -->
	<test name="Smoke Tests">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<classes>
			<class name="com.demoqa.webautomation.testcases.ElementsFunctionalityTest" />
		</classes>
	</test>
</suite>