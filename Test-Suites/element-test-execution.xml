<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA Test Suite - Complete" verbose="1" preserve-order="true">

	<!-- Global Listeners -->
	<listeners>
		<listener class-name="com.demoqa.webautomation.utilities.ExtentReportManager" />
	</listeners>

	<!-- Global Parameters -->
	<parameter name="os" value="windows" />
	<parameter name="browser" value="chrome" />

	<!-- All Element Tests with Priority Order -->
	<test name="Element Functionality Tests" preserve-order="true">
		<classes>
			<class name="com.demoqa.webautomation.testcases.ElementsFunctionalityTest">
				<!-- This will execute all 57 tests in priority order (1-57) -->
			</class>
		</classes>
	</test>

</suite>