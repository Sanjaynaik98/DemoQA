<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="DemoQA CrossBrowser Suite">

    <!-- ✅ Extent Report Listener -->
    <listeners>
        <listener class-name="com.orangehrm.webautomation.utilities.ExtentReportManager" />
    </listeners>

    <!-- ✅ Chrome -->
    <test name="Chrome Test">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.orangehrm.webautomation.testcases.HomePageTests" />
        </classes>
    </test>

    <!-- ✅ Edge -->
    <test name="Edge Test">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.orangehrm.webautomation.testcases.HomePageTests" />
        </classes>
    </test>

    <!-- ✅ Firefox -->
    <test name="Firefox Test">
        <parameter name="os" value="windows" />
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.orangehrm.webautomation.testcases.HomePageTests" />
        </classes>
    </test>
</suite>
